{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500,
    "height": 400,
    "title": "CO2 emssions and GDP per Country",
    "data": {
    "url": "https://raw.githubusercontent.com/arub0005/3179/main/bubble.csv"
    },
    "params": [
    {
    "name": "Population_Above",
    "value": 0,
    "bind": {
    "input": "range",
    "min": 0,
    "max": 100000000,
    "step": 1000000,
    "name": "Minimum Population: "
    }
    },
    {
    "name": "Continent_selection",
    "bind": {
    "input": "select",
    "options": [
    null,
    "Americas",
    "Europe",
    "Africa",
    "Asia",
    "Oceania"
    ],
    "labels":[
    "Show All",
    "Americas",
    "Europe",
    "Africa",
    "Asia",
    "Oceania"
    ],
    "name": "Continent Selection: "
    }
    }
    ],
    "transform": [{"filter": "datum.Annual_CO2_emissions > 0"},
    {"filter": "datum.GDP_PPP > 0"},{"filter": "datum.Population > Population_Above"},
    {
    "filter": "Continent_selection == null || datum.continent ==Continent_selection"
    },{"calculate": "datum.GDP_PPP/1000000", "as": "M_GDP"}],
    "encoding": {
    "x": {
    "field": "M_GDP",
    "type": "quantitative",
    "title": "GDP (millions)",
    "axis": {"tickCount": 7,"labelAngle": 90, "labelLimit": 0},
    "scale": {"type": "log", "domain": [10, 100000000]}
    },
    "y": {
    "field": "Annual_CO2_emissions",
    "type": "quantitative",
    "title": "Annual CO2 emmisions (kilotonnes)",
    "axis": {"tickCount": 7},
    "scale": {"type": "log", "domain": [5000, 100000000000]}
    }
    },
    "layer": [
    {
    "mark": "circle",
    "encoding": {
    "size": {
    "field": "Population",
    "type": "quantitative",
    "scale": {
    "type": "threshold",
    "domain": [1000000, 10000000, 50000000, 100000000,
    500000000],
    "range": [10, 50, 150, 200, 300, 400]
    },
    "legend": {"format": ".1s"}
    },
    "color": {
    "field": "continent",
    "type": "nominal",
    "scale": {"domain": [
    "Americas",
    "Europe",
    "Africa",
    "Asia",
    "Oceania"
    ],
    "range": [
    "#e41a1c",
    "#984ea3",
    "#ff7f00",
    "#a6cee3",
    "#377eb8",
    "#a65628"
    ]
    }
    },
    "opacity": { "value": 0.6},
    "tooltip": [
    {"field": "Entity", "type": "nominal"},
    {"field": "Annual_CO2_emissions", "type": "quantitative", "format": ","},
    {"field": "M_GDP", "type": "quantitative", "format": ","}
    ]
    }
    },
    {
    "mark": {
    "type": "text",
    "align": "right",
    "baseline": "middle",
    "dx": -12,
    "fontSize": 11.5,
    "fontStyle": "italic"
    },
    "encoding": {
    "text": {"field": "Entity", "type": "nominal"},
    "color": {"value": "black"},
    "opacity": {"condition": {
    "test": "datum['Entity'] == 'China' || datum['Entity'] == 'Australia' || datum['Entity'] == 'United States'", "value": 1
    },
    "value": 0
    },
    "tooltip": [
    {"field": "Entity", "type": "nominal", "title": "Country"},
    {"field": "M_GDP", "type": "quantitative", "format": ",", "title": "GDP in millions"},
    {"field": "Annual_CO2_emissions", "type": "quantitative", "format": ",", "title": "Annual CO2 emissions"},
    {"field": "Population", "type": "quantitative", "format": ","}
    ]
    }
    }
    ]
    }
